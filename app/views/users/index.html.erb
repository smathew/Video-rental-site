<h1>Listing users</h1>
<% if current_user.admin? %>
	<table>
	  <tr>
		<th>Name</th>
		<th>Email</th>
		<th>Phone number</th>
	  </tr>

		<% @users.each do |user| %>
		  <tr>
			<td><%=h user.name %></td>
			<td><%=h user.email %></td>
			<td><%=h user.phone_number %></td>
			<td><%= link_to 'Show', user %></td>
			<td><%= link_to 'Edit', edit_user_path(user) %></td>
			<td><%= link_to 'Destroy', user, :confirm => 'Are you sure you want to remove this User?', :method => :delete %></td>
		  </tr>
		<% end %>
	</table>
<% end %>
<br />
<%= link_to 'New user', new_user_path %>
