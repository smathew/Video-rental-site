<h1>Listing users</h1>

<table>
  <tr>
	<th>Name</th>
	<th>Email</th>
	<th>Phone number</th>
  </tr>
	<% if current_user.admin? %>
		<% @users.each do |user| %>
		  <tr>
			<td><%=h user.name %></td>
			<td><%=h user.email %></td>
			<td><%=h user.phone_number %></td>
			<td><%= link_to 'Show', user %></td>
			<td><%= link_to 'Edit', edit_user_path(user) %></td>
			<td><%= link_to 'Destroy', user, :confirm => 'Are you sure you want to remove this User?', :method => :delete %></td>
		  </tr>
		<% end %>
	<% else %>
		<%= redirect_to user_path %>
	<% end %>
</table>

<br />
<%= link_to 'New user', new_user_path %>
