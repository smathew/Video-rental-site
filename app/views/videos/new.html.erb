<h1>New video</h1>

<% form_for(@video) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p><%= f.label :category %><br />
	<%= collection_select(:video, :category_id, Category.all, :id, :name ) %>
  </p>
  <p>
    <%= f.submit 'Add Video' %>
  </p>
<% end %>

<%= link_to 'Back', videos_path %>