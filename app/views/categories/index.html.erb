<h1>Listing categories</h1>

<table class="profile">
  <tr class="main">
    <th>Name</th>
  </tr>

<% @categories.each do |category| %>
  <tr class="main">
    <td><%=h category.name %></td>
    <td><%= link_to 'Edit', edit_category_path(category) %>    <%= link_to 'Destroy', category, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New category', new_category_path %>